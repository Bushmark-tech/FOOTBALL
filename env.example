# Football Predictor Pro - Production Environment Variables
# Copy this file to .env and update with your production values

# Django Settings
SECRET_KEY=your-super-secret-key-change-this-in-production-min-50-chars
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/football_predictor_prod

# Redis Configuration
REDIS_URL=redis://localhost:6379/1

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@footballpredictor.com

# Rate Limiting
RATELIMIT_ENABLE=True

# Model Paths
MODEL1_PATH=/app/models/model1.pkl
MODEL2_PATH=/app/models/model2.pkl

# FastAPI Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8001
FASTAPI_WORKERS=4

# Health Checks
HEALTH_CHECK_ENABLED=True

